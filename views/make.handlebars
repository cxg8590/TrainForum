<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>DomoMaker</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav><a href="/login"><img id="logo" src="/assets/img/face.png" alt="face logo"/></a>
    <div class="navlink"><a href="/logout">Log out</a></div>
  </nav>
  <section id="domos">
    <div class="domo">
      <section id="makeDomo">
        <form id="domoForm" name="domoForm" action="/maker" method="POST" class="domoForm">
          <label for="name">Name: </label>
          <input id="profName" type="text" name="name" placeholder="Name"/>
          <label for="color">Color: </label>
          <input id="domoColor" type="color" name="color" value="#55acee"/>
          <label for="pic">Profile Picture: </label>
          <select id="profPic" name="pic">
              <option style="background-image:url(/assets/img/train1.jpg)">train1</option>
              <option style="background-image:url(/assets/img/train2.jpg)">train2</option>
              <option style="background-image:url(/assets/img/train3.jpg)">train3</option>
              <option style="background-image:url(/assets/img/train4.jpg)">train4</option>
              <option style="background-image:url(/assets/img/train5.jpg)">train5</option>
            </select>
            
          <input type="hidden" name="_csrf" value={{csrfToken}} />
          <a id="makeDomoSubmit" href="/maker" class="makeDomoSubmit">Make Domo</a>
        </form>
      </section>
    </div>
  </section>
  <div id="domoMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="domo" src="assets/img/domo.png" alt="domo"/>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/maker.js" type="text/babel"></script>
</body>
</html>